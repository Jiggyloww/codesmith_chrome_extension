{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "action" : {
    "default_popup": "index.html"
  },
  "background" : {
    "service_worker" : "background.js"
  },
  "permissions":["activeTab", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at" : "document_idle",
      "js":["content.js"]
    }
  ]
}

